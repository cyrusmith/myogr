=form_tag sessions_path do |f|
  .field
    = label_tag :login, t('session.login')
    %br
    = text_field_tag :login, params[:login]

  .field
    = label_tag :password, t('session.password')
    %br
    = password_field_tag :password
  .helpers
    = link_to t('session.remind_password'), user_remind_path
  -#<% if devise_mapping.rememberable? -%>
  -#  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  -#<% end -%>
  .field.actions
    = submit_tag t('session.sign_in')