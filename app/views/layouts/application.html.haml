<!DOCTYPE html>
%html
  %head
    %title Гипермаркет "Огромно"
    -#= stylesheet_link_tag "kickstart/kickstart.css", :media => "all"
    = stylesheet_link_tag "application", :media => "all"
    -#= stylesheet_link_tag 'http://fonts.googleapis.com/css?family=PT+Sans:400,400italic,700,700italic&subset=latin,cyrillic', :media => "all"
    -#= javascript_include_tag "kickstart/kickstart.js.bak"
    = javascript_include_tag "application"
    -#= javascript_include_tag :defaults
    = csrf_meta_tags
    %style{:type => 'text/css'} * {box-sizing: border-box; -moz-box-sizing: border-box;-webkit-box-sizing: border-box}
  %body
    = render 'shared/header'
    #wrapper
      -if (flash[:success])
        %div{:class => 'notice success'}
          = flash[:success]
          %a{:href => "#close", :class => "icon-remove", :data => {:icon => "x"}, :style => "display:inline-block;"}
      -if (notice)
        %div{:class => 'notice warning'}
          = notice
          %a{:href => "#close", :class => "icon-remove", :data => {:icon => "x"}, :style => "display:inline-block;"}
      -if (alert)
        %div{:class => 'notice error'}
          = alert
          %a{:href => "#close", :class => "icon-remove", :data => {:icon => "x"}, :style => "display:inline-block;"}
      #main-data
        = render 'shared/banners'
        = yield
      #right-sidebar
        - unless current_user.nil?
          %ul
            %li= link_to t('banner.my_banners'), banners_path
            %li= link_to t('record.my_records'), records_path
            - active_package = current_user.packages.active.first
            %li= link_to t('user.my_distribution_records'), active_package.nil? ? new_distribution_package_path : distribution_packages_path(active_package)
      .clear

    = render 'shared/footer'
