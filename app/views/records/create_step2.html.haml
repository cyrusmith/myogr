= form_for @record do |f|
  - if @record.errors.any?
    #error_explanation
      %h2= "#{pluralize(@record.errors.count, "error")} prohibited this record from being saved:"
      %ul
        - @record.errors.full_messages.each do |msg|
          %li= msg

  %ul#procedures
    - @procedures.each do |procedure|
      %li{:id => procedure.id}
        = check_box_tag 'record[procedures][]', procedure.id, false, data: { :duration => procedure.duration.to_s }
        = label_tag 'record[procedures]' do
          = procedure.name
          %span= procedure.duration.to_s

  %ul#employees
    - @employees.each do |employee|
      %li
        - radio_button_hash = @employees.size == 1 ? {checked: true} : {}
        = f.radio_button :employee, employee.id, radio_button_hash
        = f.label :employee do
          = employee.first_name
          %span= employee.position
    -#%li
    -#  = f.radio_button :employee, 'any'
    -#  = f.label :employee, "Любой мастер"

  .field
    = f.label :record_date
    = f.text_field :record_date

  %ul#avaliable_time
    - @time_range.each do |time|
      - clock_time = Russian::strftime(time, '%H%M')
      %li{class: "time_#{clock_time}"}
        = radio_button_tag "time", clock_time
        = label_tag "time_#{clock_time}", Russian::strftime(time, '%H:%M')

  .hidden
    = hidden_field_tag 'record[group]', @group
    = hidden_field_tag 'record[full_time]'
  .actions
    = f.submit 'Save'
