- javascipt 'distribution/package_choose'
= label_tag :package_list, 'Номер ведомости'
- today_list = distributing_lists.where(date: Date.today).first #must be one
- default_list = list || today_list || distributing_lists.first
- if default_list
  = select_tag :package_list, options_from_collection_for_select(distributing_lists, :id, :human_date, default_list.id), class: 'chzn-select', data: {package_list_source: distribution_point_package_list_path(@point, '')}

  = select_tag :packages, options_from_collection_for_select(default_list.packages.in_states(states).asc(:order), :id, :code), include_blank: true, required:true, autofocus: true, class: 'chzn-select', style: 'width:100px;', data: { package_source: distribution_package_path('')}
  %span#krutilka
  #package-info
- else
  %p Нет ведомостей для работы