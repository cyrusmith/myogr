= javascipt 'distribution/reception'

%h3 Поступление

= render 'distribution/shared/tab_menu', point: @point, active: 'reception'

.tab-content
  = form_tag distribution_point_reception_path do
    = label_tag :barcode, 'Введите штрихкод'
    = text_field_tag :barcode, nil,  autofocus: true

    %ul#reception_list

    %hr
    .field
      = label_tag :recieved_from, 'Получено от '
      = text_field_tag :recieved_from, nil, required: true
    .actions
      = submit_tag 'Принять товар'