= form_for @distribution_point do |f|
  - if @distribution_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@distribution_point.errors.count, "error")} prohibited this distribution_center from being saved:"
      %ul
        - @distribution_point.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title, t('.title')
    = f.text_field :title

  .field
    = f.label :head_name, t('.head_user')
    = f.text_field :head_name, data: {autocomplete_source: find_users_path}

  .field
    = f.label :employees_names, t('.employees')
    = f.text_field :employees_names, data: {autocomplete_source: find_users_path}

  .field
    = f.label :default_day_package_limit, t('.default_package_limit')
    = f.text_field :default_day_package_limit, size: 1

  %fieldset
    %legend Адрес
    = f.fields_for @distribution_point.address do |builder|
      = render 'addresses/fields', f: builder

  .field
    = f.label :comment, t('.comment')
    = f.text_field :comment

  .actions
    = f.submit 'Создать ЦР'
