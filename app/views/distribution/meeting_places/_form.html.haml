= javascript 'locations'
= form_for @meeting_place do |form|
  - if @meeting_place.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meeting_place.errors.count, "error")} prohibited this address from being saved:"
      %ul
        - @meeting_place.errors.full_messages.each do |msg|
          %li= msg
  .field
    = form.label :description, 'Описание места встречи:'
    = form.text_field :description

  = form.fields_for :location do |builder|
    = render 'fields', form: builder, meeting_place: @meeting_place

  .actions
    = form.submit 'Сохранить'