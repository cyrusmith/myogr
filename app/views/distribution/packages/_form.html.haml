- javascipt 'packages'
= javascript_tag do
  window.days_off = #{raw @marked_days.to_json}

= form_for @distribution_package do |f|
  %h4
    Запись в центр раздач на
    - if @distribution_points.count > 1
      - point = @distribution_package.package_list.try('point') || @chosen_point
      - default_value = point.nil? ? '' : point.id
      = select_tag 'distribution_point',
          options_from_collection_for_select(@distribution_points, :id, :address, default_value),
          required: true, autofocus: true, prompt: default_value.blank? ? '(Выберите ЦР)' : false
    - else
      - point = @distribution_points.first
      = hidden_field_tag 'distribution_point', point.id
      = point.address.to_s
  - unless @distribution_package.new_record?
    - method = @distribution_package.distribution_method
    %h5
      Вы записаны в ЦР на #{@distribution_package.package_list.point.address.to_s}. Дата получения #{ Russian::strftime @distribution_package.package_list.date, '%e %B(%A)'}.
      - if method == :case
        Вы пользуетесь услугой кейс, подходите без очереди.
      - else
        Номер записи - #{@distribution_package.order}.

  - if @distribution_package.errors.any?
    - errors = @distribution_package.errors
    .notice.error
      %i.icon-remove-sign.icon-large
      - if errors.size == 1
        = errors.full_messages.first
      -else
        %ul.no-margin
          - @distribution_package.errors.full_messages.each do |msg|
            %li= msg

  #calendar{style: ('display:none' if @distribution_package.package_list.nil? and @chosen_point.nil?)}
    #calendar-loading
      %span#krutilka
    = hidden_field_tag :package_date, @distribution_package.package_list.nil? ? '' : @distribution_package.package_list.date.to_date.iso8601

  %fieldset#package-items
    %legend Заказы
    %table.tight
      %thead
        %tr
          %td Название закупки
          %td Организатор
          %td
      %tbody
        - @found_items.each do |item|
          - item_id = item.is_a?(Distributor) ? item.id : item.item_id
          %tr{id:item_id}
            %td= t item.title
            %td= User.find(item.organizer).display_name
            %td{nowrap: 'nowrap'}
              = hidden_field_tag 'tid[]', item_id
              %ul.button-bar
                %li
                  = link_to remove_from_cabinet_path(item_id),
                            title: 'Уже получено(удалить из личного кабинета)', remote:true do
                    %i.icon-trash.icon-large
                %li
                  = link_to '#', class: 'remove_custom_tid', title: 'Отложить(забрать в следующий раз)' do
                    %i.icon-inbox.icon-large

    %p
      = label_tag :topic_link, 'Ссылка или id темы:'
      = text_field_tag :topic_link
      = link_to '#', id: 'add-custom-topic', title: 'Добавить', data: {source: distributors_path} do
        %i.icon-plus.icon-large

  .field
    = f.label :comment, t('common.comment')
    = f.text_area :comment, cols: 50, rows: 2
  .actions
    = f.submit disabled: (true if @distribution_package.new_record?)
    -#%span#errors
    -#  %i.icon-remove-sign
    - unless @distribution_package.new_record?
      или
      = link_to 'Отменить запись', distribution_package_path(@distribution_package), :method => :delete, :confirm => 'Вы уверены, что хотите отменить запись?'
