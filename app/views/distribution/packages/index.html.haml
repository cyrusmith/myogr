- javascript 'packages.js'
%h3 Записи в центр раздач

%table
  %tr
    %th Дата записи
    %th Статус
    %th Закупки в сборке

  - @distribution_packages.each do |package|
    %tr
      %td= Russian::strftime package.package_list.date, '%d %B'
      %td= t ('status.' + package.state)
      %td= t (package.items.map(&:title).join('<br>'))
      %td= link_to 'Редактировать', edit_distribution_package_path(package)
      %td= link_to 'Отказаться от записи', package, :method => :delete, :data => { :confirm => 'Вы уверены, что хотите отменить запись?' }

%br

= link_to 'Записаться', new_distribution_package_path
